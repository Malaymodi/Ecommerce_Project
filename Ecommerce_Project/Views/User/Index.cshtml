@model Ecommerce_Project.ViewModels.UserLoginViewModel

@{
}
<h1>Index view</h1>
<form asp-controller="User" asp-action="Login" method="post" class="needs-validation" data-ajax="true" data-ajax-method="POST" novalidate autocomplete="off">
    <div asp-validation-summary="All"></div>
    <br />
    <div class="form-row">
        <div class="form-group col-md-12">
            <input type="email" asp-for="username" class="form-control" placeholder="Email" required>
            <div class="invalid-feedback">
                Please enter a valid email.
            </div>
        </div>
        <div class="form-group col-md-12">
            <input type="password" asp-for="password" class="form-control" autocomplete="off" placeholder="Password" required>
            <div class="invalid-feedback">
                Please enter a Password.
            </div>
        </div>
    </div>
    <div class="actions">
        <div class="form-row">
            
            <div class="form-group col-md-6">
                <button class="btn btn-primary medium-button float-right  minus-15" type="submit">Login</button>
            </div>
        </div>
    </div>
</form>