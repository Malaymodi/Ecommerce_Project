 <h1>This is the product list page</h1>
<form asp-controller="Home" asp-action="Index" method="get">
    <p>
        Name <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
@foreach (var item in Model)
{
    <div class="card" style="width: 25%; border:2px solid black; display:inline-block">

        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            <p class="card-text"> @Html.DisplayFor(modelItem => item.Description)</p>
            <h6 class="card-text">Rs @Html.DisplayFor(modelItem => item.Price)</h6>
            <h6 class="card-text">  @Html.DisplayFor(modelItem => item.ProductImages)</h6>
            <img src="http://localhost:44333/api/product/"
             class="rounded-circle"
             height="40" width="40"
             asp-append-version="true" />
            <img src="/Images/2eacb106-8341-4f80-b9b0-322955e82fd9_laptop.jpg" width="100" height="200" alt="3" />

            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Details" >Get Product Detail</a>
            @Html.ActionLink("Details", "Details", new {  id=item.ProductId }) |
                
        </div>
    </div>
}

